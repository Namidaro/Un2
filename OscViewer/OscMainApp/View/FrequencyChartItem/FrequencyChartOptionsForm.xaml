<Window x:Class="Oscilloscope.View.FrequencyChartItem.FrequencyChartOptionsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки частотной диаграммы" Height="186" Width="278" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="PeriodLabel" Content="Число периодов" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="HarmonyLabel" Content="Число гармоник" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Button Content="Принять" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click_1"/>
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="150,119,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click_2"/>
        <TextBox x:Name="PeriodTb" Height="23" Margin="130,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>
        <TextBox x:Name="HarmonyTb" Height="23" Margin="130,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>
        <Label Content="Значения величин" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="PercentCb" Margin="130,76,0,0" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>

    </Grid>
</Window>
