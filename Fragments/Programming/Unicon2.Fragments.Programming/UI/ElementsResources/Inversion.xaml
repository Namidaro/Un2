<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:Unicon2.Fragments.Programming.Behaviors"
    xmlns:evm="clr-namespace:Unicon2.Fragments.Programming.ViewModels.ElementViewModels"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">
    <DataTemplate DataType="{x:Type evm:InversionViewModel}">
        <Grid>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Thumb
                    Name="DragThumb"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Cursor="SizeAll"
                    IsHitTestVisible="True">
                    <i:Interaction.Behaviors>
                        <behaviors:DesignerItemBehavior />
                    </i:Interaction.Behaviors>
                </Thumb>
                <Rectangle
                    Name="SelectBorder"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="-5"
                    IsHitTestVisible="False"
                    StrokeThickness="1" />
                <ContentControl
                    Grid.Column="0"
                    Margin="0,5,0,0"
                    Panel.ZIndex="1"
                    Content="{Binding ConnectorViewModels[0]}" />
                <Rectangle
                    Grid.Column="1"
                    IsHitTestVisible="False"
                    StrokeThickness="1" />
                <TextBlock
                    Grid.Column="1"
                    Margin="6,0,0,0"
                    FontFamily="Calibri"
                    FontSize="8"
                    IsHitTestVisible="False"
                    LineHeight="10"
                    Text="{Binding Symbol}" />
                <ContentControl
                    Grid.Column="2"
                    Margin="0,5,0,0"
                    Panel.ZIndex="1"
                    Content="{Binding ConnectorViewModels[1]}" />
            </Grid>
        </Grid>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                <Setter TargetName="SelectBorder" Property="Stroke" Value="ForestGreen" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

</ResourceDictionary>