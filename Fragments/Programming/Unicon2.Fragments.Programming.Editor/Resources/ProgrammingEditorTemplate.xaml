<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:view="clr-namespace:Unicon2.Fragments.Programming.Editor.View"
    xmlns:viewModel="clr-namespace:Unicon2.Fragments.Programming.Editor.ViewModel">

    <DataTemplate x:Key="ProgrammingEditorViewModelDataTemplate" DataType="{x:Type viewModel:ProgrammingEditorViewModel}">
        <VirtualizingStackPanel>
            <TextBlock Margin="5" Text="{lex:Loc ProgrammingEditorDescription}" />
            <view:ProgrammingEditorView />
         </VirtualizingStackPanel>
    </DataTemplate>
</ResourceDictionary>