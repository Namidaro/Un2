<UserControl
    x:Class="Unicon2.Shell.Views.MenuItems.CommandButtonMenuItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Unicon2.Shell.Views.MenuItems"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menuItems="clr-namespace:Unicon2.Shell.ViewModels.MenuItems"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    d:DataContext="{d:DesignInstance menuItems:CommandMenuItemViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <lex:LocProxy Name="titleProxy" Source="{Binding NameKey}" />
        <MenuItem Command="{Binding Command}" Header="{Binding ElementName=titleProxy, Path=Result, Converter={StaticResource IgnoringFailedLocalizationConverter}}" />
    </Grid>
</UserControl>
