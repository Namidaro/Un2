<UserControl
    x:Class="Oscilloscope.View.AnalogChartItem.AnalogChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="_this"
    Height="165"
    d:DesignWidth="346"
    mc:Ignorable="d">



    <Grid x:Name="MainGrid" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition x:Name="ImageColumn" Width="197*" />
            <ColumnDefinition Width="4" />
        </Grid.ColumnDefinitions>


        <Grid
            x:Name="InfoCanvas"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="150"
            Margin="0,0,0,0"
            HorizontalAlignment="Left"
            Panel.ZIndex="1">
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        x:Name="VectorCheckBox"
                        Header="Векторная диаграмма"
                        IsCheckable="True" />
                    <MenuItem
                        x:Name="FreqCharCheckBox"
                        Header="Частотная диаграмма"
                        IsCheckable="True" />
                    <MenuItem Header="Предел">
                        <MenuItem
                            x:Name="SetYButton"
                            Click="SetYButton_Click"
                            Header="Установить" />
                        <MenuItem
                            x:Name="ResetYButton"
                            Click="ResetYButton_Click"
                            Header="Сбросить" />
                    </MenuItem>
                    <MenuItem Header="Представление сигнала">
                        <MenuItem
                            x:Name="Menu1"
                            Checked="Menu1_Checked"
                            Header="Мгновенное"
                            IsCheckable="True" />
                        <MenuItem
                            x:Name="Menu2"
                            Checked="Menu1_Checked"
                            Header="Среднеквадратичное"
                            IsCheckable="True" />
                        <MenuItem
                            x:Name="Menu3"
                            Checked="Menu1_Checked"
                            Header="1 гармоника"
                            IsCheckable="True" />
                    </MenuItem>
                </ContextMenu>
            </Grid.ContextMenu>
            <StackPanel>
                <Label
                    x:Name="ChannelNameTb"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Label"
                    FontSize="10"
                    Foreground="#FF00005a" />
                <Label
                    x:Name="ChannelNameTb2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Label"
                    FontSize="10"
                    Foreground="#FF820000" />
                <Label
                    x:Name="MinTb"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Label"
                    FontSize="10"
                    Foreground="#FF00005a" />
                <Label
                    x:Name="MaxTb"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Label"
                    FontSize="10"
                    Foreground="#FF00005a" />
                <Label
                    x:Name="RmsTb"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Label"
                    FontSize="10"
                    Foreground="#FF00005a" />
                <Label
                    x:Name="HarmonyTb"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Label"
                    FontSize="10"
                    Foreground="#FF00005a" />
                <Label
                    x:Name="Frequency"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Label"
                    FontSize="10"
                    Foreground="#FF00005a" />
            </StackPanel>
        </Grid>

        <Grid
            x:Name="ImageGrid"
            Grid.Column="1"
            Margin="0,0,0,0"
            SizeChanged="Grid_SizeChanged_1">
            <Image
                x:Name="DrawImage"
                MinWidth="50"
                MouseDown="DrowCanvas_MouseDown"
                Stretch="None" />
        </Grid>
    </Grid>
</UserControl>
