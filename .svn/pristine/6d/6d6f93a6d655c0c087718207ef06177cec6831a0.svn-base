<controls:MetroWindow
    x:Class="Unicon2.Fragments.FileOperations.View.NewDirectoryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="fileBrowserControl"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <UniformGrid Columns="2" />
        <TextBlock Text="{lex:Loc Path}" />
        <TextBlock Text="{Binding NewDirectoryPath}" />
        <TextBlock Text="{lex:Loc Name}" />
        <TextBox Text="{Binding NewDirectoryName}" />
        <Button Command="{Binding SubmitCommand}" Content="{lex:Loc Ok}" />
        <Button Command="{Binding CancelCommand}" Content="{lex:Loc Cancel}" />
    </Grid>
</controls:MetroWindow>



